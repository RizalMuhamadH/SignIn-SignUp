<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.trainingretrofit.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <com.emmasuzuki.easyform.EasyForm xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.user.trainingretrofit.MainActivity"
        tools:showIn="@layout/activity_main"
        app:submitButton="@+id/submit_register"
        android:id="@+id/button">

        <com.emmasuzuki.easyform.EasyFormEditText
            android:id="@+id/txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textSize="20sp"
            app:errorMessage="empty"
            app:errorType="empty"
            android:hint="ID"/>
        <com.emmasuzuki.easyform.EasyFormEditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textSize="20sp"
            android:layout_marginTop="44dp"
            android:hint="Email"
            app:errorMessage="empty"
            app:errorType="empty"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <com.emmasuzuki.easyform.EasyFormEditText
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textSize="20sp"
            android:hint="password"
            android:inputType="textPassword"
            app:errorMessage="empty"
            app:errorType="empty"
            android:layout_below="@+id/txt_email"
            android:layout_alignParentStart="true" />
        <com.emmasuzuki.easyform.EasyFormEditText
            android:id="@+id/txt_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textSize="20sp"
            android:hint="Autentication"
            app:errorMessage="empty"
            app:errorType="empty"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="127dp" />

        <Button
            android:id="@+id/submit_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Submit"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </com.emmasuzuki.easyform.EasyForm>


</RelativeLayout>
